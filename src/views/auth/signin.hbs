    <script>
        // JavaScript para mostrar la fecha y hora actual
        function mostrarFechaHora() {
            const fechaHora = new Date();
            const fechaHoraActual = fechaHora.toLocaleString();
            document.getElementById("fechaHora").textContent = fechaHoraActual;
        }
        mostrarFechaHora();
    </script>
