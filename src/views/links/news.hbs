<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <h2 style="color: aliceblue;">Suscríbete a nuestro sistema de noticias</h2>
      <form action="/links/news" method="POST">
        <div class="form-group">
          <label for="nombre" style="color: aliceblue;">Nombre:</label>
          <input type="text" class="form-control" name="nombre" placeholder="Ingresa tu nombre" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="correo" style="color: aliceblue;">Correo Electrónico:</label>
          <input type="email" class="form-control" name="correo" placeholder="Ingresa tu correo electrónico" autocomplete="off">
        </div>
        <button type="submit" class="btn btn-primary">Suscribirse</button>
      </form>
    </div>
    <div class="col-md-6">
      <div class="card" style="background-color: rgba(241, 235, 235, 0.744);">
        <img src="/img/noticias.jpg" class="card-img-top img-fluid rounded" alt="Imagen de ejemplo">
        <div class="card-body">
          <h5 class="card-title">¡Únete a nosotros!</h5>
          <p class="card-text">Recibe las últimas noticias en nuestra pagina.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
